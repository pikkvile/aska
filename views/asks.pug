extends layout.pug

block content
    if asks.length
        ul.list-unstyled
            each ask in asks
                li.ask
                    div.row.ask-head
                        //-
                            div.col-3.ask-title
                                h5 #{ask.title}
                            div.col-2.offset-7.text-right.ask-bid #{ask.bid}
                    div.row.ask-body
                        div.col-12.text-justify #{ask.body}
                    div.row.ask-bottom
                        a.col(href='/ask/' + ask._id + '/propagate') propagate
                        //-
                            div.col-10.ask-tags
                                each tag in ask.tags
                                    span.ask-tag #{tag}
                            div.col-2.text-right.ask-owner TODO (Owner name)
    else
        h6: i You have no incoming asks yet